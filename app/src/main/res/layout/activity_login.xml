<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/connect_to_foursquare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/backgroud_connect_to_foursquare"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_foursquare_wordmark"
        android:padding="8dp"
        android:text="@string/label_connect_to_foursquare"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/connected_to_foursquare_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/connected_to_foursquare"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>